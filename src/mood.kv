<LabBut@ButtonBehavior+Label>:

<ButImg@ButtonBehavior+Image>:


<CircularButton@Button>:
    background_color: (0,0,0,0)
    back_color: (1,0,1,0)
    border_radius: [360]
    canvas.before:
        Color:
            rgb: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius


<MainWindow>:
    name: "main"
    MyLoader:
        id: img_loader


    FloatLayout
        canvas.before:
            Color:
                rgba: 1, 245/255, 238/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            canvas.before:
                Color:
                    rgba: 0.93, 75/255, 50/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: 1, 0.08
            pos_hint: {'top': 1}
            halign: 'left'
            valign: 'middle'
            text:'RecipeMaster'
            text_size: self.size
            padding: 10, 10
            font_size: 22
            bold: True

        ButImg:
            id: guzik
            color: (1,1,1,0.5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            background_normal: ''
            source: './res/0.png'
            size_hint: 0.7, 0.7
            on_press:
                self.color = (1, 1, 1, 0.4)
                guzik_lab.opacity = 0.7
            on_release:
                self.color = (1, 1, 1, 0.5)
                guzik_lab.opacity = 1
                app.root.current = 'second'
                root.manager.transition.direction = 'left'

        LabBut:
            id: guzik_lab
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.5, 0.1
            text: 'RecipeMaster!'
            bold: True
            font_size: 26
            color: (0.165,0.165,0.165,0.95)
            on_press:
                self.opacity = 0.8
                guzik.color = (1, 1, 1, 0.4)
            on_release:
                self.opacity = 1
                guzik.color = (1, 1, 1, 0.5)
                app.root.current = 'second'
                root.manager.transition.direction = 'left'


        CircularButton:
            background_normal: ''
            back_color: [250/255, 190/255, 34/255, 1]
            pos_hint: {'center_x': 0.85, 'center_y': 0.1}
            size_hint: 0.15, 0.15*9/16
            text: '+'
            font_size: 35
            on_press:
                self.back_color = (230/255, 220/255, 34/255, 1)
            on_release:
                self.back_color: (250/255, 235/255, 34/255, 1)
                root.manager.transition.direction = 'left'



<SecondWindow>:
    name: "second"


    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 250/255, 245/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MyLoader:
            id: recipe_loader

        LabBut:
            id: go_back
            canvas.before:
                Color:
                    rgba: 0.93, 75/255, 50/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: ' <- '
            font_size: 30
            bold: True
            size_hint: 0.2, 0.08
            pos_hint: {'x': 0, 'top': 1}
            on_press:
                self.opacity = 0.75
            on_release:
                self.opacity = 1
                app.root.current = "main"
                root.manager.transition.direction = 'right'
        Label:
            id: window_title
            canvas.before:
                Color:
                    rgba: 0.93, 75/255, 50/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: 1, 0.08
            pos_hint: {'x': 0.2, 'top': 1}
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            text: str(recipe_loader.loader.get_data_content('title') + 'Recipe!')
            padding_x: 10
            font_size: 22
            bold: True
        LabBut:
            id: gallery
            text: 'Galeria zdjec'
            color: (0,0,0,0.3)
            font_size: 12
            size_hint: 0.2, 0.02
            pos_hint: {'x': 0.7, 'top': 0.9}
            on_press:
                self.opacity = 0.2
            on_release:
                self.opacity = 0.3
                app.root.current = "third"
                root.manager.transition.direction = 'left'
        Label:
            id: description_title
            size_hint: 1, 0.075
            pos_hint: {'top': 0.925}
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            color: (0, 0, 0, 0.5)
            text: str(recipe_loader.loader.get_data_content('title')) + ':'
            font_size: 14
            padding_x: 30
            bold: True
        Label:
            id: ingredients
            size_hint: 1, 0.075
            pos_hint: {'top': 0.65}
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            color: (0, 0, 0, 0.5)
            text: 'Ingredients:'
            font_size: 14
            padding_x: 30
            bold: True
        Label:
            id: preparing
            size_hint: 1, 0.075
            pos_hint: {'top': 0.382}
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            color: (0, 0, 0, 0.5)
            text: 'Preparing:'
            font_size: 13
            padding_x: 30
            bold: True

        Label:
            id: description_txt
            size_hint: 1, 0.225
            pos_hint: {'top': 0.86}
            halign: 'left'
            valign: 'top'
            text_size: self.size
            color: (0, 0, 0, 0.35)
            text: str(recipe_loader.loader.get_data_content('description'))
            font_size: 13
            padding_x: 50
        Label:
            id: ingredients_txt
            size_hint: 1, 0.25
            pos_hint: {'top': 0.59}
            halign: 'left'
            valign: 'top'
            text_size: self.size
            color: (0, 0, 0, 0.35)
            text: recipe_loader.loader.get_from_list('ingredients', '-')
            font_size: 13
            padding_x: 50
        Label:
            id: preparing_txt
            size_hint: 1, 0.3
            pos_hint: {'top': 0.312}
            halign: 'left'
            valign: 'top'
            text_size: self.size
            color: (0, 0, 0, 0.35)
            text: str(recipe_loader.loader.get_from_list('preparing'))
            font_size: 13
            padding_x: 50

<ThirdWindow>:
    name: 'third'

    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 250/255, 245/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MyLoader:
            id: img_loader

        LabBut:
            id: go_back
            canvas.before:
                Color:
                    rgba: 0.93, 75/255, 50/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: ' <- '
            font_size: 30
            bold: True
            size_hint: 0.2, 0.08
            pos_hint: {'x': 0, 'top': 1}
            on_press:
                self.opacity = 0.75
            on_release:
                self.opacity = 1
                app.root.current = "second"
                root.manager.transition.direction = 'right'
        Label:
            id: window_title
            canvas.before:
                Color:
                    rgba: 0.93, 75/255, 50/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            size_hint: 1, 0.08
            pos_hint: {'x': 0.2, 'top': 1}
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            text: str(img_loader.loader.get_data_content('title') + 'Gallery!')
            padding_x: 10
            font_size: 22
            bold: True
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            size_hint: 1, 0.9
            pos_hint: {'top': 0.9}
            GridLayout:
                cols: 1
                spacing: 10
                size_hint: 1, None
                height: root.height
                pos_hint: root.pos_hint
                Label:
                    text:'oc o chodzi...\n' * 100
                    color: (0,0,0,1)
                    size_hint: 1, 1
                    height: self.texture_size[1]
                Image:
                    source: './res/0.png'
                    size_hint: 0.5, 0.5
                    background_normal: ''
                    pos_hint: {'x': 0.25, 'y': 0.1}
                ButImg:
                    color: (1,1,1,0)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    background_normal: ''
                    source: './res/0.png'
                    size_hint: 0.7, 0.7
                    on_press:
                        self.color = (1, 1, 1, 0.1)
                    on_release:
                        self.color = (1, 1, 1, 0)




WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:


